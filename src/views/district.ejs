<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="/css/jquery.dataTables.min.css" />
        <link rel="stylesheet" href="/css/virtual-select.min.css">
        <link rel="stylesheet" href="/css/reset.css">
        <link rel="stylesheet" href="/css/base.css">
        <link rel="stylesheet" href="/css/danhsach.css" />
        <link rel="stylesheet" href="/css/fontawesome6.css">
        <style>
            .highlight {
                color: red;
            }

            .gioihan {
                display: -webkit-box;
                -webkit-line-clamp: 1;
                -webkit-box-orient: vertical;
                visibility: visible;
                text-overflow: ellipsis;
                overflow: hidden;
                word-wrap: break-word;
                line-height: 34px;
                /* 3 lines x 16px line-height */
            }
        </style>
    </head>

    <body>


        <div class="header">
            <span class="header-subTitle">Quản lý tài sản</span>
            <span>-</span>
            <span class="header-mainTitle">Danh sách phiếu điều chuyển tài sản</span>
        </div>
        <table id="example" class="display" style="width: 100%;">
            <thead class="title-column">
                <tr>
                    <th style="width: 12%">Mã huyện</th>
                    <th style="width: 15%">Tên quận/huyện</th>
                    <th style="width: 20%">Tên tỉnh/thành phố</th>
                </tr>
            </thead>
            <tbody>
                <% if (data && data.length> 0) { %>
                    <% data.forEach(function(item,index){ %>
                        <tr>
                            <td>
                                <%= item.ID %>
                            </td>
                            <td>
                                <%= item.NAME %>
                            </td>
                            <td>
                                <%= item.PROVINCE_NAME %>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <p>No records found.</p>
                                <% } %>
            </tbody>
        </table>
        <script src="/js/jquery-3.5.1.js"></script>
        <script src="/js/jquery.dataTables.min.js"></script>
        
        <script>
            $(document).ready(function () {
                var table = $('#example').DataTable({
                    paging: true,
                    info: true,
                    order: [[2, 'asc']],
                    sort: true,
                    lengthChange: false,
                    colReorder: true,
                    language: {
                        search: '',
                        zeroRecords: "Không có dữ liệu hiển thị",
                        info: "Hiển thị _START_ - _END_ của _TOTAL_ bản ghi",
                        infoEmpty: "Không tìm thấy bản ghi nào.",
                        infoFiltered: "(Lọc từ _MAX_ bản ghi.)",
                        paginate: {
                            previous: "Trước",
                            next: "Sau",
                        },
                        searchPlaceholder: "Nhập từ khóa tìm kiếm",
                    },
                    // aoColumnDefs: [
                    //     { "bSortable": false, "aTargets": [0] },
                    //     { "bSearchable": false, "aTargets": [0] },
                    // ],
                    "pageLength": 10, //set mặc định có bao nhiêu bản ghi được hiển thị
                });
               
            });
        </script>
    </body>

</html>